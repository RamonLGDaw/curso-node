<%- include('./template/cabecera.ejs',{ tituloHead:'Vista detalle' }) %>
    <div class="container">
        <h2 class="text-center">
            Vista detalle
        </h2>
        <% if (error) { %>
            <p>
                <%= mensaje %>
            </p>
            <a href="/mascotas" class="btn btn-dark">Volver a mascotas</a>
        <% } %>
        <% if (!error) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            <%= mascota.id %>
                        </th>
                        <td>
                            <%= mascota.nombre %>
                        </td>
                        <td>
                            <%= mascota.descripcion %>
                        </td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <% } %>
    </div>
    <%- include('./template/footer')%>