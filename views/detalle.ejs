<%- include('./template/cabecera.ejs',{ tituloHead:'Vista detalle' }) %>
    <div class="container">
        <h2 class="text-center">
            Vista detalle
        </h2>
        <% if (error) { %>
            <p>
                <%= mensaje %>
            </p>
            <a href="/mascotas" class="btn btn-dark">Volver a mascotas</a>
        <% } %>
        <% if (!error) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            <%= mascota.id %>
                        </th>
                        <td>
                            <%= mascota.nombre %>
                        </td>
                        <td>
                            <%= mascota.descripcion %>
                        </td>
                        <td>
                            <button class="btn btn-danger" id="btnEliminar" data-id="<%= mascota.id %>">Eliminar</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <% } %>
    </div>
    <script>

        const btnEliminar = document.querySelector('#btnEliminar')
        btnEliminar.addEventListener('click', async()=>{
            console.log('me diste click!!')
            const id = btnEliminar.dataset.id
            console.log(`id ==>> ${id}`)
            try {
                const data = await fetch(`/mascotas/${id}`, {
                    method:'delete'
                })
                const res = await data.json()
                if(res.estado){
                    window.location.href = '/mascotas'
                } else {
                    console.log(res)
                }
            } catch (error) {
                console.log(error)
            }
        })

    </script>
    <%- include('./template/footer')%>

